<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-camera"></span> AI Photo Editor!</h1>
             <p>Edit photos optimal for your store use</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/photos/new">Add New Photos</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% photos.forEach(function(photo){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= photo.image %>">
                   <div class="caption">
                       <h4><%= photo.name %></h4>
                   </div>
                   <p>
                       <a href="/photos/<%= photo._id %>" class="btn btn-primary">Edit Photo</a>
                   </p>
                   <% console.log(photo) %>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
